    <languages>	
	<language tag="en-GB">languages/admin/en-GB.com_masscontent.ini</language>
     </languages>
  </administration>
  
      <params>
		<param name="nbMassContent" type="text" size="5" default="10" label="PARAMNBMASSCONTENT" description="PARAMNBMASSCONTENT">
		</param>	
		<param name="nbMassCategories" type="text" size="5" default="10" label="PARAMNBMASSCATEGORIES" description="PARAMNBMASSCATEGORIES">
		</param>		
		<param name="nbMassSections" type="text" size="5" default="10" label="PARAMNBMASSSECTIONS" description="PARAMNBMASSSECTIONS">
		</param>		
        <param name="displayWysiwyg" type="radio" default="0" label="PARAMDISPLAYWYSIWYGr" description="PARAMDISPLAYWYSIWYGr">
	    <option value="0">Hide</option>
	    <option value="1">Show for 1st content</option>
	    <option value="2">Show for all contents</option>
	</param>
	<param name="displayAlias" type="radio" default="1" label="PARAMDISPLAYALIAS" description="PARAMDISPLAYALIAS">
	    <option value="0">Hide</option>
	    <option value="1">Show</option>
	</param>	
	<param name="displayIntroText" type="radio" default="1" label="PARAMDISPLAYINTROTEXT" description="PARAMDISPLAYINTROTEXT">
	    <option value="0">Hide</option>
	    <option value="1">Show</option>
	</param>
	<param name="displayFullText" type="radio" default="1" label="PARAMDISPLAYFULLTEXT" description="PARAMDISPLAYFULLTEXT">
	    <option value="0">Hide</option>
	    <option value="1">Show</option>
	</param>
	<param name="displayMetaDescription" type="radio" default="0" label="PARAMDISPLAYMETADESCRIPTION" description="PARAMDISPLAYMETADESCRIPTION">
	    <option value="0">Hide</option>
	    <option value="1">Show</option>
	</param>
	<param name="displayMetaKeywords" type="radio" default="0" label="PARAMDISPLAYMETAKEYWORDS" description="PARAMDISPLAYMETAKEYWORDS">
	    <option value="0">Hide</option>
	    <option value="1">Show</option>
	</param>	
	<param name="displayMetaRobots" type="radio" default="0" label="PARAMDISPLAYMETAROBOTS" description="PARAMDISPLAYMETAROBOTS">
	    <option value="0">Hide</option>
	    <option value="1">Show</option>
	</param>	
	<param name="displayMetaAuthor" type="radio" default="0" label="PARAMDISPLAYMETAAUTHOR" description="PARAMDISPLAYMETAAUTHOR">
	    <option value="0">Hide</option>
	    <option value="1">Show</option>
	</param>		
    </params>
  
</install>
